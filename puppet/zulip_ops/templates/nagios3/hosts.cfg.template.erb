<% @hosts_loadbalancer.each do |host| -%>
define host{
       use              generic-host
       host_name        <%= host %>
       alias            <%= host %>
       address          <%= host %>.<%= @default_host_domain %>
       hostgroups       all,pageable_servers
       }
<% end -%>

