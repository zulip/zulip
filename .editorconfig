root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[[shell]]
binary_next_line = true
indent_size = 4
switch_case_indent = true

[*.{astro,bash,css,cjs,cts,js,json,hbs,html,mjs,mts,sh,ts}]
indent_size = 4

[*.{cjs,cts,js,json,mjs,mts,ts,tsx}]
max_line_length = 100

[*.{py,pyi}]
max_line_length = 110

[package.json]
indent_size = 2
