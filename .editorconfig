root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sh,py,pyi,js,json,yml,xml,css,md,markdown,handlebars,html}]
indent_style = space
indent_size = 4

[*.{svg,rb,pp,pl}]
indent_style = space
indent_size = 2

[*.{cfg}]
indent_style = space
indent_size = 8
