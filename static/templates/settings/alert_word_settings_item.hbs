{{! Alert word in the settings page that can be removed }}

<tr class="alert-word-item" data-word='{{word}}'>
    <td>
        <div class="alert_word_listing">
            <span class="value">{{word}}</span>
        </div>
    </td>
    <td>
        <button type="submit" class="button rounded small delete btn-danger remove-alert-word tippy-zulip-tooltip" data-word="{{word}}" data-tippy-content="{{t 'Delete' }}" data-tippy-placement="top" aria-label="{{t 'Delete' }}">
            <i class="fa fa-trash-o" aria-hidden="true"></i>
        </button>
    </td>
</tr>
