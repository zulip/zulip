<div class="no-groups-to-show-message">
    <span class="settings-empty-option-text user-groups-top-align">
        {{empty_user_group_list_message}}
        {{#if all_groups_tab}}
            {{#if can_create_user_groups}}
                <button type="button" class="action-button action-button-quiet-brand">
                    <span class="action-button-label">{{t "Create user group"}}</span>
                </button>
            {{/if}}
        {{else}}
            <button type="button" class="action-button action-button-quiet-neutral">
                <span class="action-button-label">{{t "View all groups"}}</span>
            </button>
        {{/if}}
    </span>
</div>
