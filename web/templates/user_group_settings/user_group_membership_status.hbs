{{#if is_direct_member}}
    {{#if group.is_system_group}}
        {{t "You have this role."}}
    {{else}}
        {{t "You are a member of this group."}}
    {{/if}}
{{else if (not is_member)}}
    {{#if group.is_system_group}}
        {{t "You do not have this role."}}
    {{else}}
        {{t "You are not a member of this group."}}
    {{/if}}
{{else}}
    {{#if group.is_system_group}}
        {{#tr}}
            You have this role because you have a higher role (<z-subgroup-names></z-subgroup-names>).
            {{#*inline "z-subgroup-names" ~}}
                {{~#list_each associated_subgroup_names type="unit" as |name| ~}}
                <b class="highlighted-element">{{name}}</b>
                {{~/list_each ~}}
            {{~/inline}}
        {{/tr}}
    {{else}}
        {{#tr}}
            You are a member of this group because you are a member of a subgroup (<z-subgroup-names></z-subgroup-names>).
            {{#*inline "z-subgroup-names" ~}}
                {{~#list_each associated_subgroup_names type="unit" as |name| ~}}
                <b class="highlighted-element">{{name}}</b>
                {{~/list_each ~}}
            {{~/inline}}
        {{/tr}}
    {{/if}}
{{/if}}
