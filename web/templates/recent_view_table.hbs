<div id="recent_view_filter_buttons" role="group">
    <div id="recent_filters_group">
        {{> recent_view_filters .}}
    </div>
    {{#> components/input_wrapper . input_type="filter-input" id="recent-view-search-wrapper" icon="search" input_button_icon="close"}}
        <input type="text" id="recent_view_search" class="input-element user-list-filter" value="{{ search_val }}" autocomplete="off" placeholder="{{t 'Filter topics' }}" />
    {{/components/input_wrapper}}
</div>
<div class="table_fix_head">
    <div class="recent-view-container">
        <table class="table table-responsive">
            <thead id="recent-view-table-headers">
                <tr>
                    <th class="recent-view-topic-header" data-sort="conversation_sort">
                        <div class="recent-view-header-wrapper">
                            <span>{{t 'Channel' }}</span>
                            <i class="zulip-icon zulip-icon-chevron-right"></i>
                            <span>{{t 'Conversation' }}</span>
                            <i class="table-sortable-arrow zulip-icon zulip-icon-sort-arrow-down"></i>
                        </div>
                    </th>
                    <th data-sort="unread_sort" data-tippy-content="{{t 'Sort by unread message count' }}" class="recent-view-unread-header unread_sort tippy-zulip-delayed-tooltip hidden-for-spectators">
                        <div class="recent-view-header-wrapper">
                            <i class="zulip-icon zulip-icon-unread"></i>
                            <i class="table-sortable-arrow zulip-icon zulip-icon-sort-arrow-down"></i>
                        </div>
                    </th>
                    <th class='recent-view-participants-header participants_header'>
                        <div class="recent-view-header-wrapper">
                            {{t 'Participants' }}
                        </div>
                    </th>
                    <th data-sort="numeric" data-sort-prop="last_msg_id" class="recent-view-last-msg-time-header last_msg_time_header active descend">
                        <div class="recent-view-header-wrapper">
                            <span>{{t 'Time' }}</span>
                            <i class="table-sortable-arrow zulip-icon zulip-icon-sort-arrow-down"></i>
                        </div>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
