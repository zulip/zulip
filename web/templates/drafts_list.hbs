<div class="drafts-list overlay-messages-list" data-simplebar data-simplebar-tab-index="-1">
    <div class="no-drafts no-overlay-messages">
        {{t 'No drafts.'}}
    </div>

    <div id="drafts-from-conversation">
        <h2 class="drafts-section-header">{{narrow_drafts_header}}</h2>
        {{#each narrow_drafts}}
            {{> draft .}}
        {{/each}}
    </div>

    {{#if other_drafts}}
        <div id="other-drafts">
            <h2 id="other-drafts-header" class="drafts-section-header">{{t "Other drafts" }}</h2>
            {{#each other_drafts}}
                {{> draft .}}
            {{/each}}
        </div>
    {{/if}}
</div>
