<div class="drafts-list overlay-messages-list" data-simplebar data-simplebar-tab-index="-1">
    <div class="no-drafts no-overlay-messages">
        <div class="no-drafts-title">
            {{t "No drafts."}}
        </div>
        <div class="no-drafts-action">
            <a class="start-new-message" role="button" tabindex="0">
                {{t "Click here to go to inbox"}}
            </a>
        </div>
    </div>
</div>

    <div id="drafts-from-conversation">
        <h2>{{narrow_drafts_header}}</h2>
        {{#each narrow_drafts}}
            {{> draft .}}
        {{/each}}
    </div>
    <div id="other-drafts">
        <h2 id="other-drafts-header">{{t "Other drafts" }}</h2>
        {{#each other_drafts}}
            {{> draft .}}
        {{/each}}
    </div>
